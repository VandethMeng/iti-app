# Environment Variables for School Management System Backend
# Copy this file to .env for local development (DO NOT commit .env to git)

# Server Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=dev

# MongoDB Configuration
# Local development
MONGODB_URI=mongodb://localhost:27017/schoolmis

# Production (MongoDB Atlas) - Replace with your actual connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/schoolmis?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Change this to a strong secret key (minimum 32 characters) in production
JWT_SECRET=your_secret_key_change_this_in_production_with_a_strong_key_at_least_32_characters

# CORS Configuration
# Local development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Production - Add your Vercel frontend URL
# CORS_ALLOWED_ORIGINS=https://iti-app.vercel.app

# Combined for both environments
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://iti-app.vercel.app

